{
    "extends": "@switch-to-eu/typescript-config/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/lib/*": ["./lib/*"],
            "@/server/*": ["./server/*"],
            "@/components/*": ["./components/*"],
            "@components/*": ["./components/*"],
            "@hooks/*": ["./hooks/*"],
            "@i18n/*": ["./i18n/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "next.config.mjs",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
